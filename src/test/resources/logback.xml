<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd_HH:mm:ss.SSS} [%t] %mdc{gtlevel}[%.-1level] %logger{5} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="io.github.thiagolvlsantos" level="DEBUG" /> 

  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
  
</configuration>